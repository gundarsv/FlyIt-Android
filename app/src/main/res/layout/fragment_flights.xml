<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha=".95"
    android:background="@drawable/blue_gradient"
    android:foregroundTint="#FFFFFF">


    <ImageView
        android:id="@+id/big_plane1"
        android:layout_width="412dp"
        android:layout_height="731dp"
        android:alpha=".35"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/big_plane_1half" />

    <Button
        android:id="@+id/buttonNoFlights"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:alpha=".65"
        android:background="@drawable/rounded_corners"
        android:text="No flights? Click here to add one."
        app:layout_constraintBottom_toBottomOf="@+id/big_plane1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.371"
        app:layout_constraintStart_toStartOf="@+id/big_plane1"
        app:layout_constraintTop_toTopOf="@+id/big_plane1"
        app:layout_constraintVertical_bias="0.837" />

    <TextView
        android:id="@+id/flightNo"
        android:layout_width="116dp"
        android:layout_height="45dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/buttonNoFlights"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.203"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.423" />

</androidx.constraintlayout.widget.ConstraintLayout>