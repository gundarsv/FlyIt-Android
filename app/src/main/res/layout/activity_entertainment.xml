<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient"
    android:backgroundTint="#34FFFFFF"
    android:backgroundTintMode="src_over">

    <ImageView
        android:id="@+id/big_plane3"
        android:layout_width="458dp"
        android:layout_height="469dp"
        android:alpha=".35"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.324"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54"
        app:srcCompat="@drawable/big_plane_1half" />

    <TextView
        android:id="@+id/language_game_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontStyle="normal"
        android:fontWeight="400"
        android:text="@string/learn_a_new_language"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <ImageView
        android:id="@+id/language_game_logo_image"
        android:layout_width="232dp"
        android:layout_height="194dp"
        android:onClick="btnLoadUnity"
        android:src="@drawable/language_game_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/language_game_text"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/trivia_quiz_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontStyle="normal"
        android:fontWeight="400"
        android:text="@string/trivia_time"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/language_game_logo_image"
        app:layout_constraintVertical_bias="0.1" />

    <ImageView
        android:id="@+id/trivia_game_logo_image"
        android:layout_width="232dp"
        android:layout_height="194dp"
        android:src="@drawable/trivia_game_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trivia_quiz_text"
        app:layout_constraintVertical_bias="0.15" />

</androidx.constraintlayout.widget.ConstraintLayout>